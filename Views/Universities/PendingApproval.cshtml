@model IEnumerable<MyRateApp2.Models.University>
<h2>Universities Awaiting Approval</h2>

@foreach (var university in Model)
{
    <div>
        <p>@university.Name</p>
        <!-- Other details -->
        <form asp-action="Approve" method="post">
            <input type="hidden" name="id" value="@university.UniId" />s
            <input type="submit" value="Approve" />
        </form>
    </div>
}
